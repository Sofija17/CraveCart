@model List<CraveCart.Models.CartItem>

<h2>Your Shopping Cart</h2>

<table class="table">
    <thead>
        <tr>
            <th>Food Item</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FoodName</td>
                <td>@item.Quantity</td>
                <td>@item.Price.ToString("C")</td>
                <td>@(item.Price * item.Quantity).ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

<p>Total: @Model.Sum(i => i.Price * i.Quantity).ToString("C")</p>
